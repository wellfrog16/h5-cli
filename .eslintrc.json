{
    "env": {
        "browser": true,
        //"commonjs": true,
        "es6": true,
        "jquery": true,
        "amd": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "no-console": "off",
        "comma-spacing": [2, {"before": false, "after": true}],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-extra-semi": "error"
    }
}